<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sectorsLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Moved Back Button to top -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:textSize="24sp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/numSectorsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введіть кількість секторів"
        android:textSize="24sp"
        android:inputType="number" />

    <Button
        android:id="@+id/generateButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Згенерувати сектори"
        android:textSize="24sp"
        android:layout_marginTop="12dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/sectorsButtonsContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>
